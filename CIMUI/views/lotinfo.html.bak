	 <style>
#myProgress {
  width: 100%;
  background-color: #ddd;
}

#myBar {
  width: 10%;
  height: 30px;
  background-color: #4CAF50;
  text-align: center;
  line-height: 30px;
  color: white;
}
</style>

<div id="myProgress" ng-show="false">
  <div id="myBar">10%</div>
</div><br/>
<script>
function move() {
  var elem = document.getElementById("myBar");   
  var width = 10;
  var id = setInterval(frame, 10);
  function frame() {
    if (width >= 100) {
      clearInterval(id);
    } else {
      width++; 
      elem.style.width = width + '%'; 
      elem.innerHTML = width * 1  + '%';
    }
  }
  
  setTimeout(function() {
    $('#myBar').fadeOut('fast');
}, 1500);
}

</script>
	 
      <div class="bs-example col-md-6" ng-show="processLotStepResult">
    <div id="myAlert" class="alert alert-success">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <strong>Proces Lot Step Result</strong> {{processLotStepResultMsg}}.
		<a type="button" ui-sref="app.lotlist" class="btn btn-info active">Ok</a>
    </div>
</div>
 
  
  
	<div class="row">
 
        <!-- /.col -->
        <div class="col-md-6">
            <div class="card card-accent-info">
                <div class="card-header">
                    <i class="fa fa-edit"></i> Lot Info
                </div>
                <div class="card-block">
                    <fieldset class="form-group">
                        <label>Lot ID : </label>
                        <small class="text-muted">{{lotInfo.lotId}}</small>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Lot Name : </label>
                        <small class="text-muted">{{lotInfo.lotName}}</small>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Lot Family : </label>
                        <small class="text-muted">{{lotInfo.lotFamily}}</small>
                    </fieldset>  
                    <fieldset class="form-group">
                        <label>Lot Process : </label>
                        <small class="text-muted">
                       
						<span ng-if="lotInfo.lotJobProcess === null">
					       None
					     </span>
					     <span ng-if="lotInfo.lotJobProcess !== null">
					        {{lotInfo.lotJobProcess.processId}}
					     </span>                        
                        </small>
                    </fieldset>  
                    <fieldset class="form-group">
                        <label>Foup : </label>
                        <small class="text-muted">{{lotInfo.foupId}}</small>
                    </fieldset>  
                    <fieldset class="form-group">
                        <label>Wafer Count : </label>
                        <small class="text-muted">{{lotInfo.waferCount}}</small>
                    </fieldset>
                     <fieldset class="form-group">
                       <table>
                       <tr>
                       
                       <td>
                       <span ng-if="showWhatsNextBtn">
						<button type="button" class="btn btn-primary" ng-click="showWhatsNext()">What's Next &nbsp;<i class="fa fa-mail-forward"></i></button>
					   </span>
					   </td>
					  
					   <td>
					    <span ng-if="showStartLotBtn">
						<button type="button" class="btn btn-primary" ng-click="showStartLot()">Start Lot</button>
					    </span>
					   </td>

					   <td>
					    <span ng-if="showEquipmentListBtn">
						<button type="button" class="btn btn-primary" ng-click="showToolList()">Show Equipments for this route &nbsp;<i class="fa fa-mail-forward"></i></button>
					    </span>
					   </td>

					   <td>
					    <span ng-if="showProcessLotStepBtn">
						<button type="button" class="btn btn-primary" ng-click="processLotStep()">Process Lot Step</button>
					    </span>
					   </td>

					   <td>
					    <span ng-if="showWhatsNextBtn">
					    <span>
						<button type="button" class="btn btn-primary" ng-click="showLotHistory()">Show Lot History</button>
					    </span>
					   </td>
					   
					   </tr>
						</table>
                    </fieldset>                   
                </div>

				<div class="card-block">

				</div>  				               
                
            </div>

        </div>
        <!-- /.col -->
        
         <!-- /.col -->
        <div  ng-show="showWhatsNextPane" class="col-md-6">
            <div class="card card-accent-info">
                <div class="card-header">
                    <i class="fa fa-edit"></i> What's Next
                </div>
                <div class="card-block" ng-controller="lotInfoCtrl">
                    <fieldset class="form-group">
                        <label>Route ID : </label>
                        <small class="text-muted">{{nextProcessRoute.routeId}}</small>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Route Name : </label>
                        <small class="text-muted">{{nextProcessRoute.routeName}}</small>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Equipment Family : </label>
                        <small class="text-muted">{{nextProcessRoute.equipmentFamily}}</small>
                    </fieldset>  
                    <fieldset class="form-group">
                        <label>Lot Process : </label>
                        <small class="text-muted">{{nextProcessRoute.processId}}</small>
                    </fieldset>  
                    <fieldset class="form-group">
                        <label>Sequence : </label>
                        <small class="text-muted">{{nextProcessRoute.seqNo}}</small>
                    </fieldset>
                </div>
            </div>

        </div>       

		<!-- /.col -->
        <div ng-show="showToolListPane" class="col-md-6">
            <div class="card card-accent-info">
                <div class="card-header">
                    <i class="fa fa-edit"></i> Equipment Info
					
                </div>
                <div class="card-block" ng-controller="lotInfoCtrl">
				
				<table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                 <th>Tool ID</th>
		                       <th class="text-center">Tool Name</th>
                            </tr>
                        </thead>
                        <tbody>
						  <tr ng-repeat="tool in $parent.nextEquipmentList" ng-click="setSelectedTool()">
                                  <td>
								<strong>{{ tool.toolId }}</strong>
		                       </td>
		                       <td class="text-center">
		                           <div>{{ tool.toolName }}</div>
		                       </td>         
                   </tr> 
                        </tbody>
                    </table>
					<button type="button" class="btn btn-success" ng-show="showProcessLotStepBtn" ng-click="processLotStep()">Process Lot Step</button>
		          <div class="pull-right">
				  <a type="button" ui-sref="app.lotlist" class="btn btn-info active"><i class="fa fa-mail-reply"></i></a> 
				  </div>
                </div>
            </div>

        </div>       
        
    </div>
    <!-- /.row -->


	 
	
</div>
